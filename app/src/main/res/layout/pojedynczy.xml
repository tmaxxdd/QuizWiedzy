<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/listview_pojedynczy"
    style="@style/napis_listview">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src ="@drawable/historia"
        android:id="@+id/historia_img"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/historia_txt"
        android:layout_alignTop="@+id/historia_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historia"
        android:id="@+id/historia_txt"
        android:layout_marginTop="20dp"
        style="@style/napis_listview"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/historia_img"
        android:layout_toEndOf="@+id/historia_img" />
</RelativeLayout>